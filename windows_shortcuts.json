        }
      ]
    },
    {
      "description": "Home [Unless Terminal]",
      "manipulators": [
        {
          "from": {
            "key_code": "home",
            "modifiers": {"optional": ["any"]}
          },
          "to": [{
              "key_code": "left_arrow",
              "modifiers": ["left_command"]
