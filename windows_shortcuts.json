{
  "title": "Windows Shortcuts",
  "rules": [
    {
      "description": "Home (LCtrl+LShift)",
      "manipulators": [
        {
          "from": {
            "key_code": "home",
            "modifiers": { "mandatory": ["left_control", "left_shift"], "optional": ["any"] }
          },
          "to": [{
            "key_code": "up_arrow",
            "modifiers": ["left_command", "left_shift"]
          }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Home (LCtrl)",
      "manipulators": [
        {
          "from": {
            "key_code": "home",
